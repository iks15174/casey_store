<!DOCTYPE html>
<html lang="en">

<head>

  <header>
    <%- include ("./header") %>
  <header>

</head>

<body>

  <nav class="nav w-100 p-3">
    <a class="nav-link" href="/claim/do">DO CLAIM</a>
    <a class="nav-link" href="/main/">HOME</a>
  </nav>

  <div class="container p-3 my-1">
    <select class="form-control" id="claim_list" name="claim_list" onchange="LoadSearchResult();">
      <option value="" selected disabled>Search by Store Name...</option>
      <%for(var i = 0; i < name.length; i++){%>
        <option id="<%= name[i].name%>"><%= name[i].name%></option>
      <%}%>
      <option>others</option>
      <option>ALL</option>
    </select>
  </div>

  <div class="container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>TITLE</th>
          <th>CREATED</th>
        </tr>
      </thead>
      <tbody id="list-group">
        <%for(var i = 0; i < data.length ; i++){%>
          <tr onclick="window.location='/claim/detail/<%= data[i].id%>'">
            <td><%=data[i].id%></td>
            <td><%=data[i].title%></td>
            <td><%=data[i].created%></td>
          </tr>
        <%}%>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap core JavaScript -->
  <footer>
    <%- include ("./footer") %>
  <footer>
  <script src="/js/claim_list.js"></script>
</body>

</html>
