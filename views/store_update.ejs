<!DOCTYPE html>
<html lang="en">

<head>

  <header>
    <%- include ("./header") %>
  <header>

</head>

<body>

  <nav class="d-flex nav w-100 p-3">
    <a class="p-2 nav-link" href="/main/">HOME</a>
    <a class="p-2 nav-link" href="/claim/do">DO CLAIM</a>
    <a class="p-2 nav-link" href="/claim/list">CLAIM LIST</a>
  </nav>

  <form method="post" action="/admin/store/update/<%= rows.id%>?_method=PUT&previous=/store/detail/<%= rows.id%>">
    <div class="container p-3 my-3">
      <div class="form-group">
        <label for="Casey_Store">Casey Store</label>
        <input type="text" class="form-control" id="name" name='name' value="<%= rows.name%>">
      </div>

      <div class="form-group">
        <label for="place">Where is the store</label>
        <a type="button" id="search_place" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
          Search place
        </a>
        <input type="text" class="form-control" id="place" name='place' value="<%= rows.place%>" readonly="readonly">
        <input type="hidden" id="lat" name="lat" value="<%= rows.lat%>">
        <input type="hidden" id="lng" name="lng" value="<%= rows.lng%>">
      </div>

      <%- include ("./do_claim/modal") %>
      <%- include ("./claim_update/time") %>

      <div class="form-group">
        <label for="place">What is the store telephon number</label>
        <input type="text" class="form-control" id="tel" name='tel' value="<%= rows.tel%>">
      </div>
      <div class="form-group">
        <label for="place">Write more detail about store</label>
        <textarea class="form-control" id="description" name='description'><%= rows.description %></textarea>
      </div>
      <input type="hidden" id="before_name" name='before_name' value="<%= rows.name%>">
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  <!-- Bootstrap core JavaScript -->
  <footer>
    <%- include ("./footer") %>
  <footer>
  <script src='/js/font.js'></script>
  <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=e715bf635c806908c70e37ffb15809f7&libraries=services"></script>
  <script src="/js/do_claim/map.js"></script>
  <script src="/js/do_claim/getLocation.js"></script>
  <script src="/js/do_claim/time_menu.js"></script>
  <script src="/js/do_claim/putPlace.js"></script>
</body>
</html>
